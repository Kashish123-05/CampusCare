# CampusCare Environment Variables
# Copy this file to .env and update values

DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (default SQLite)
# DATABASE_URL=sqlite:///db.sqlite3

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=CampusCare <noreply@campuscare.edu>

# Gemini API (for AI Chatbot - recommended)
GEMINI_API_KEY=your-gemini-api-key

# OpenAI (Optional - alternative for AI Chatbot)
OPENAI_API_KEY=sk-your-openai-api-key

# Chatbot Settings
CHATBOT_ENABLED=True
CHATBOT_USE_GEMINI=True
CHATBOT_USE_OPENAI=False
